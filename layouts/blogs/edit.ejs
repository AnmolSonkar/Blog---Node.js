<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/nav.ejs') %>

            <div class="create-blog content">
                <form method="POST" action="/blogs/<%= blogs.id %>?_method=PUT">
                    <div>
                        <div>
                            <label for="title">Title</label>
                            <input type="text" name="title" value="<%= blogs.title %>" required>
                        </div>
                        <div>
                            <label for="snippet">Description</label>
                            <input type="text" name="snippet" value="<%= blogs.snippet %>" required>
                        </div>
                        <div>
                            <label for="body">Markdown</label>
                            <textarea type="text" name="body" required><%= blogs.body %></textarea>
                        </div>
                    </div>
                    <a href="/">Cancel</a>
                    <button type="submit">Save</button>
                </form>
            </div>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>